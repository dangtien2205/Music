<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:gravity="center"
    android:background="#00000000"
    android:orientation="horizontal"
    android:layout_height="64dp">

    <ImageView
        android:id="@+id/img_avatar_notification"
        android:layout_width="64dp"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_weight="5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_name_no_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="serif"
            android:lines="1"
            android:text="All of me"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_artist_no_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:text="John Legend"
            android:textColor="@android:color/white"
            android:textSize="12sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/civ_pause_no_small"
        android:layout_weight="1"
        android:layout_height="36dp"
        android:layout_width="36dp"
        android:src="@drawable/ic_av_pause_over_video_large"/>

    <ImageView
        android:layout_weight="1"
        android:id="@+id/civ_next_no_small"
        android:src="@drawable/next"
        android:layout_height="26dp"
        android:layout_width="26dp" />

    <ImageView
        android:layout_weight="1"
        android:id="@+id/img_close_small"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:alpha="0.5"
        android:src="@drawable/i_close"/>
</LinearLayout>